<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/algsview_container"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:id="@+id/list"
            android:onClick="onClick"
            >


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:background="@drawable/ic_seq"
                android:clickable="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_list"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/queue"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_queue"/>
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_queue"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/stack"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_stack"/>
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_stack"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tree"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/list"/>
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_tree"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/list"/>
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_graph"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/list"/>
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_serach"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sort"
            android:onClick="onClick"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/main_menu_style"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:clickable="false"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/list"/>
            <TextView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="@string/main_menu_sort"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>