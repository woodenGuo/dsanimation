<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlgorithmActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Dsanimation.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/algstoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Dsanimation.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ds_def">
               <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_def_text"
                    android:text="@string/ds_def"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/header1"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:id="@+id/ds_def_content"
                    android:text="@string/algs_ll_def"
                    android:textSize="@dimen/text"
                    android:textStyle="italic"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_def_notation"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="@string/ds_def_notation"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:textSize="@dimen/text_highligt"
                    android:textStyle="italic"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_sub_def"
                    android:text="@string/algs_ll_def_index"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:padding="5dp"
                    android:background="@color/lightgray" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/ds_def_img"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider"
                    android:background="@color/diviergray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ds_insert">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_insert_text"
                    android:text="@string/def_insert_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="@dimen/header1"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:id="@+id/ds_insert_content"
                    android:text="@string/algs_ll_seq_insert"
                    android:textSize="@dimen/text"
                    android:textStyle="italic"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/ds_insert_img"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    />
                <Button
                    android:id="@+id/btn_llseq_insert"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/lightblue"
                    android:text="@string/def_insert_text"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider"
                    android:background="@color/diviergray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ds_delete">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_delete_text"
                    android:text="@string/def_delete_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="@dimen/header1"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:id="@+id/ds_delete_content"
                    android:text="@string/algs_ll_seq_delete"
                    android:textSize="@dimen/text"
                    android:textStyle="italic"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/ds_delete_img"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    />
                <Button
                    android:id="@+id/btn_llseq_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/lightblue"
                    android:text="@string/def_delete_text"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider"
                    android:background="@color/diviergray"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>