<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlgorithmActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Dsanimation.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/algstoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.Dsanimation.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_def_text"
                    android:text="@string/ds_def"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:textSize="@dimen/header1"
                    android:padding="@dimen/textview_padding"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:id="@+id/ds_def_content"
                    android:text="@string/algs_q_def_text"
                    android:textSize="@dimen/text"
                    android:textStyle="italic"
                    />

                <ImageView
                    android:id="@+id/ds_q_def_img"
                    android:layout_width="wrap_content"
                    android:layout_height="350px"
                    android:layout_margin="@dimen/activity_vertical_margin"

                    android:src="@drawable/qdef" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_sub_def"
                    android:text="@string/algs_seqstk_def_text"
                    android:textSize="18sp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:padding="5dp"
                    android:background="@color/lightgray" />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_height="@dimen/divider"
                    android:background="@color/diviergray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ds_CD_text"
                    android:text="@string/def_CD_text"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="@dimen/header1"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:id="@+id/ds_insert_content"
                    android:text="@string/algs_q_insert_text"
                    android:textSize="@dimen/text"
                    android:textStyle="italic"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:id="@+id/ds_delete_content"
                    android:text="@string/algs_q_del_text"
                    android:textSize="@dimen/text"
                    android:textStyle="italic"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:id="@+id/ds_CD_img"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <Button
                        android:onClick="onClick"
                        android:id="@+id/btn_insert"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/view_vertical_margin"
                        android:background="@color/dsblue"
                        android:text="@string/algs_insert_q_text"/>

                    <Button
                        android:id="@+id/btn_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="@color/deepgray"
                        android:layout_marginLeft="@dimen/view_vertical_margin"
                        android:onClick="onClick"
                        android:text="@string/algs_del_q_text" />
                </LinearLayout>
                <View
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider"
                    android:background="@color/diviergray"/>
            </LinearLayout>







        </LinearLayout>
    </ScrollView>
</LinearLayout>